<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_layout"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="200dp"
    tools:context=".ui.Login.Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="#055A97"
        android:background="@drawable/rounded_corner"
        app:cardCornerRadius="30dp"
        app:cardElevation="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAlignment="center"
                android:text="Mulai Bisnis Anda !"/>
            <RelativeLayout
                android:layout_marginTop="18dp"
                android:background="@drawable/round_field_login"
                android:backgroundTint="@color/white"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">
                <EditText
                    android:id="@+id/email"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="example@gmail.com"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="14dp"
                android:background="@drawable/round_field_login"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:drawableRight="@drawable/showpasswordicon"
                    android:drawableTint="@color/black"
                    android:maxLength="15"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/signup"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Pernah Daftar ?"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/login"
                android:layout_width="268dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FFFFFF"
                android:textAlignment="gravity"
                android:paddingStart="16dp"
                android:text="Mulai"
                android:textColor="#03A9F4"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

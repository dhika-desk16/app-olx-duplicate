<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#EFF1F3"

            app:title="Pasang Iklan Anda"
            android:elevation="1dp"
            android:foregroundTint="@color/black"
            app:navigationIcon="@drawable/arrow_left"
            app:titleTextColor="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="660dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="PILIH KATEGORI"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewMobil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="0dp">

                    <ImageView
                        android:id="@+id/imageViewMobil"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/materialsymbolsdirectionscaroutlinerounded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:text="MOBIL"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewProperti"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="0dp">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <ImageView
                        android:id="@+id/imageViewProperti"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/materialsymbolslighthomeworkoutlinerounded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="10dp"
                        android:text="PROPERTI"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                tools:layout_editor_absoluteY="267dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewMotor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="0dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <ImageView
                        android:id="@+id/motor"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/phmotorcycleduotone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="10dp"
                        android:text="MOTOR"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewJasaDanLowongan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="0dp">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <ImageView
                        android:id="@+id/jasa"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/materialsymbolslightcheckedbagoutlinerounded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="10dp"
                        android:text="JASA &amp; \n LOWONGAN KERJA"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                tools:layout_editor_absoluteY="392dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewElektronikDanGadget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="0dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <ImageView
                        android:id="@+id/elektronik"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/mdimonitor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="10dp"
                        android:text="ELEKTRONIK &amp; \n GADGET"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewHobiDanOlahraga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <ImageView
                        android:id="@+id/hobi"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/streamlineinterfacecontentbook2librarycontentbooksbookshelfstack" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="10dp"
                        android:text="HOBI &amp; \n OLAHRAGA"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                tools:layout_editor_absoluteY="517dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewRumahTangga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="0dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <ImageView
                        android:id="@+id/rumahtangga"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/fluentcouch12regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="10dp"
                        android:text="RUMAH TANGGA"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewOpsiLainnya"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="0dp">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray" />

                    <ImageView
                        android:id="@+id/opsi"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/solarmenudotsbold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="10dp"
                        android:text="OPSI LAINNYA"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <include
                android:id="@+id/footer"
                layout="@layout/footer"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginTop="100dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
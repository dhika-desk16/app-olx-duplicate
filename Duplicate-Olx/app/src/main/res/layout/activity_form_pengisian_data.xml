<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="200dp">

    <ImageButton
        android:id="@+id/prev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@null"
        android:src="@drawable/back_ic" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/custom_edittxt"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
                android:padding="24dp">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama :"
                    android:textAlignment="viewStart"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_below="@+id/text1"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edittxt"
                    android:drawableLeft="@drawable/person_add"
                    android:drawablePadding="10dp"
                    android:hint="Nama"
                    android:singleLine="true"
                    android:padding="8dp" />

                <TextView
                    android:layout_below="@id/name"
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Alamat Email :"
                    android:textAlignment="viewStart"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_below="@+id/text2"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edittxt"
                    android:drawableLeft="@drawable/gmail_33"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:singleLine="true"

                    android:padding="8dp" />
                <TextView
                    android:layout_below="@id/email"
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Password Email :"
                    android:textAlignment="viewStart"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:id="@+id/relativepassword"
                    android:layout_below="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:maxLength="12"
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_edittxt"
                        android:drawableLeft="@drawable/passwordicon"
                        android:drawableTint="@color/black"
                        android:drawableRight="@drawable/showpasswordicon"
                        android:drawablePadding="10dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:padding="8dp" />
                </RelativeLayout>
                <TextView
                    android:layout_below="@id/relativepassword"
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Konfirmasi Password :"
                    android:textAlignment="viewStart"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:id="@+id/relativeconfirmpw"
                    android:layout_below="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:maxLength="12"
                        android:id="@+id/confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_edittxt"
                        android:drawableLeft="@drawable/confirmpasswordicon"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/showpasswordicon"
                        android:inputType="textPassword"
                        android:drawableTint="@color/black"
                        android:hint="Konfirmasi Password"
                        android:singleLine="true"
                        android:padding="8dp" />
                </RelativeLayout>
                <TextView
                    android:layout_below="@id/relativeconfirmpw"
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="No Hp :"
                    android:textAlignment="viewStart"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_below="@id/text5"
                    android:id="@+id/no_hp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edittxt"
                    android:drawableLeft="@drawable/phone_android"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:hint="No Hp"
                    android:inputType="phone"
                    android:padding="8dp" />
                <TextView
                    android:layout_below="@id/no_hp"
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Alamat :"
                    android:textAlignment="viewStart"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_below="@id/text6"
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="8dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="Klik Disini Untuk Alamat"
                    android:drawableLeft="@drawable/location2"
                    android:drawableTint="@color/black"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_below="@id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:hint="ALAMAT ANDA AKAN MUNCUL DISINI !"/>

                <Button
                    android:layout_below="@id/text7"
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:backgroundTint="#455A64"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="Daftar"
                    android:textColor="#FFD500"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>